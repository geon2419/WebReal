{
  "name": "web-real",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "packages/math",
    "packages/core",
    "example"
  ],
  "scripts": {
    "dev:example": "bun --filter './example' dev",
    "build:example": "bun --filter './example' build",
    "build:core": "bun --filter './packages/core' build",
    "build:math": "bun --filter './packages/math' build",
    "build:all": "bun run build:math && bun run build:core && bun run build:example",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.4",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.7"
  }
}
